<?xml version="1.0"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://camel.apache.org/schema/osgi"
       xmlns:osgix="http://www.springframework.org/schema/osgi-compendium"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                            http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
                            http://camel.apache.org/schema/osgi http://camel.apache.org/schema/osgi/camel-osgi.xsd
                            http://www.springframework.org/schema/osgi-compendium http://www.springframework.org/schema/osgi-compendium/spring-osgi-compendium.xsd">
    

  <camelContext id="camel1" xmlns="http://camel.apache.org/schema/spring">
                <route id="durableJobRoute" autoStartup="false">
                        <from id="durableJobFromEndpoint"
                                uri="quartz2://myGroup/durableJobRoute?trigger.repeatCount=3&amp;durableJob=true&amp;recoverableJob=true&amp;cron=0/2+*+*+*+*+?"/>
                        <setBody>
                                <simple>Fired: ${header.CamelCreatedTimestamp}</simple>
                        </setBody>
                        <log message="${body}"/>
                        <to uri="mock:result"/>
                </route>
  </camelContext>
    
</beans>



